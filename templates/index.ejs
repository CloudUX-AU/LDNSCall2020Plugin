<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <%- include ('./common/styles', {header: content.header}) %>
</head>

<body>
    <div class="jumbotron jumbotron-fluid doc-header">
        <div class="container">
            <h1 class="display-4"><%= content.title %></h1>
            <p class="lead"><%= content.subtitle %></p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <% content.links.forEach(function(link){ %>
            <div class="col-4 mt-4">
                <div class="card" style="width: 18rem;">
                    <img src="<%= link.image %>" class="card-img-top" alt="data model template">
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-8">
                                    <h5 class="card-title"><%= link.title%></h5>
                                </div>
                                <div class="col-4">
                                    <% if (link.warning) { %>
                                    <span class="badge badge-warning">Warnings</span>
                                    <% } %>
                                    <% if (link.error) { %>
                                        <span class="badge badge-danger">Errors</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <p class="card-text"><%= link.description %></p>
                        <a href="<%= link.href %>" class="btn btn-primary">View Detail</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    <%- include ('common/footer') %> 
</body>

</html>