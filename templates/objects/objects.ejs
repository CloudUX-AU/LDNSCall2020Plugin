<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <%- include ('../common/styles') %>
    </head>

    <body>
        <div class="doc-header">
            <nav aria-label="breadcrumb" class="container doc-header">
                <ol class="breadcrumb doc-header">
                    <li class="breadcrumb-item"><a href="../index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Objects</li>
                </ol>
            </nav>    
            <div class="jumbotron jumbotron-fluid doc-header">
                <div class="container">
                    <h1 class="display-4">Objects</h1>
                    <p class="lead"><%= content.description %></p>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <table class="table">
                <tr>
                    <th>Group</th>
                    <th>Detail</th>
                </tr>
                <% content.groups.forEach(function(group){ %>
                    <tr>
                        <td><%= group.title %></td>
                        <td><a href="<%= group.link %>">Click to View</a></td>
                    </tr>
                <% }); %>
            </table>
            <h6 class="text-muted pt-4 text-right"><%= content.counter %> objects processed</h6>
            <% if (content.missingDescriptions.length>0) { %>
                <div class="mt-5"></div>
                <h4 class="bg-warning text-center mb-4">Missing Descriptions</h4>
                <p>The following fields are missing descriptions:</p>
                <ol>
                    <% content.missingDescriptions.forEach(function(missingDescription){ %>
                        <li><%= missingDescription %></li>
                    <% }); %>                
                </ol>
            <% } %>        
        </div>
        <%- include ('../common/footer') %>
    </body>

</html>